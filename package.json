{
  "name": "sigstore-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "JavaScript client for Sigstore",
  "scripts": {
    "clean": "npm run clean --workspaces --if-present",
    "build": "tsc --build tsconfig.build.json",
    "pretest": "npm run build",
    "test": "jest",
    "test:ci": "npm run test -- --maxWorkers=2 --coverage",
    "lint": "eslint --fix --ext .ts packages/**",
    "lint:check": "eslint --max-warnings 0 --ext .ts packages/**",
    "prettier:check": "prettier --check packages/**/*.ts",
    "release": "npm run build && changeset publish"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@swc/jest": "^0.2.36",
    "@total-typescript/shoehorn": "^0.1.2",
    "@tsconfig/node16": "^16.1.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "prettier": "^3.3.3",
    "shx": "^0.3.3",
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": "^16.14.0 || >=18.0.0"
  }
}
